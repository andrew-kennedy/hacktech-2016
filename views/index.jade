extends layout

block content
  .top-page
    .graph-container
    #top-page-divider
    #info-panels
      #candidates.graph-info
        #candidate-panel-name
          span I AM TRUMP
        #candidate-panel-ratio
          span 100% to 0% (Everyone likes me, duh!)
      #graph-info-space
      #keywords.graph-info
        #graph-word-cloud
          span This is where the word cloud goes! Spiffy!
          
          
  #candidate-list-container
    #sanders.democratic.candidate
      <img class="candidate-pic" src="/res/sanders.png">
      span <br />Bernie Sanders
    #clinton.democratic.candidate
      <img class="candidate-pic" src="/res/clinton.png">
      span <br />Hillary Clinton
    #trump.republican.candidate
      <img class="candidate-pic" src="/res/trump.png">
      span <br />Donald Trump
    #rubio.republican.candidate
      <img class="candidate-pic" src="/res/rubio.png">
      span <br />Mark Rubio
    #cruz.republican.candidate
      <img class="candidate-pic" src="/res/cruz.png">
      span <br />Ted Cruz
    #kasich.republican.candidate
      <img class="candidate-pic" src="/res/kasich.png">
      span <br />John Kasich
    #carson.republican.candidate
      <img class="candidate-pic" src="/res/carson.png">
      span <br />Ben Carson
    

block scripts
  script(src='/js/graph.js')