@import 'nib'


// Fonts
@import url('https://fonts.googleapis.com/css?family=Open+Sans');
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700');
@import url('https://fonts.googleapis.com/css?family=Oxygen');



bgcolor {
    background-color: rgba(198, 198, 198, 0.54);
}

a {
  color: #00B7FF;
}

html {
    font-family: 'Open Sans', sans-serif;
    text-rendering: optimizeLegibility;
    padding: 25px 50px 0px 50px;
}

.top-page {
    display: flex;
    flex-direction: row;
    padding: 20px 0px 20px 0px;
}

.graph-container {
    flex: 3;
    color: red;
    //margin : 5px
    align-self: center;


}

.graph-info {
    color: black;
    flex: 5;
    margin: auto;
    text-align: center;
    font-family: 'Oxygen', sans-serif;
    background-color: aliceblue;
    border-radius: 4px;
    padding: 5px;
    display: flex;
    flex-direction: column;
}

svg {
    width: 100%;
    height: 100%;
}

#info-panels {
    flex: 1;
    display: flex;
    flex-direction: column;
    color: bisque;
}

#graph-info-space {
    flex: 1;
    background-color: white;
}

.mg-header {
    font-family: 'Open Sans', sans-serif;
}

.mainTitle {
    font-family: 'Montserrat', sans-serif;
    padding: 10px;
    text-align: center;
}

#candidate-panel-name {
    flex : 3;
}
#candidate-panel-ratio {
    flex : 2;
}
#top-page-divider {
    width : 20px;
}


#candidate-list-container {
    align-self : center;
    width: 100%;
    min-height: 150px;
    display: flex;
    flex-wrap: wrap;


    margin:0 auto;
    text-align: center;
}

.candidate {
    flex : 1;
    margin: 6px;
    border-radius: 10px;
    flex-direction: column;
    min-width: 100px;
    max-width:20%;
}

.republican {
    background-color: rgba(145, 63, 63, 0.21);
}

.democratic {
    background-color : rgba(0, 0, 255, 0.28);
}


.candidate-pic {
    align-self: center;
    //width: 100%;
    max-width: 100%;
    height: 150 px;
    //width: auto;
    //height: auto;
}

.candname {
    font-family: 'Open Sans', sans-serif;
}


#score-description {
    font-family: 'Oxygen', sans-serif;
    text-align: center;
}

.candscoredesc {
    font-family: 'Montserrat', sans-serif;
}

.candscore {
    font-family: 'Montserrat', sans-serif;
    font-size: 35px;
}


#graph-word-cloud {
    text-align: center;
    align-content : center;
}